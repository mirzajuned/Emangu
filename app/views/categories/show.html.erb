<p id="notice"><%= notice %></p>

<h1><%= @category.name %></h1>
<table>
<% @categories.each do |subcategory| %>
<tr>
  <td><%= link_to subcategory.name, category_path(subcategory) %></td>
  <td><%= link_to 'Edit', edit_category_path(subcategory) unless subcategory.parent_id.nil? %></td>
  <td><%= link_to 'Destroy', category_path(subcategory), :confirm => 'Are you sure?', :method => :delete unless subcategory.parent_id.nil? %></td>
</tr>
<% end %>
</table>
<p>
  <%= link_to 'Back', @category.parent_id.nil? ? categories_path : category_path(@category.parent) unless @category.nil? %>
  <%= link_to 'New (sub-category', new_category_path(@category) unless @category.nil? %>

  
</p>

