<h1>Listing posts</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>Posted by</th>
      <th>Published Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to post.title, post %></td>
        <td><%= post.body %></td>
        <td><%= post.user.username.capitalize %></td>
        <td><%= post.set_date %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<h1> Recent Post </h1>
<% @posts.order('published_at desc').limit(3).each do |post| %>
  <% if post.published_at %>
    <%= link_to post.title.capitalize, post %>
  <% end %>
<% end %>
<%= link_to 'New Post', new_post_path %>
