<h1>User Profile</h1>
<%= image_tag @post.user.avatar_user_url %>
<table>
  <thead>
    <tr>
    <th>Name</th>
    <th>Email</th>
    </tr>
  </thead>

  <tbody>
    <tr>
      <td><%=@post.user.username %></td>
      <td><a href="mailto:info@support.com"><%=@post.user.email %></td></a>
    </tr>
  </tbody>
</table>

<%= form_for [@post, Contact.new] do |f| %>
  <%= f.text_field :name %>
  <%= f.text_field :email %>
  <%= f.text_area :content %>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>